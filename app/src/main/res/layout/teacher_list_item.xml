<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_teacher_rating"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rating_textview_bg"
        android:gravity="center"
        android:text="N/A"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/textView_teacher_rating"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mussa Nurtas"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_teacher_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Dean"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_rate_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackgroundBorderless"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="RATE"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

</RelativeLayout>